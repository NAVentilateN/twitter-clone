<div class="post" id="post-<%= post.id %>">
  <span class="content row">
    <p>
      <%= post.description %>
    </p>
    <% if post.picture? %>
      <%= image_tag post.picture.url, class: 'picture col-9' %>
    <% end %>
  </span>
  <div class="post-info">
    <%= image_tag current_user.photo.attached? ? current_user.photo : asset_path('question_mark.png'), class: "avatar" %>
    <span class="user">By <%= link_to post.user.username %></span>
    <span class="timestamp">Posted <%= time_ago_in_words(post.created_at) %> ago.</span>

    <% if post.user == current_user %>
      <%= link_to 'Delete',
          post_path(post),
          method: :delete,
          data: {confirm: "Are you sure?"} %>
    <% end %>
  </div>
</div>
